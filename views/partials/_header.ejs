<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>

    <% if(username !== undefined){ %>
      <h5>Logged in as: <%- username %></h5>
      <form method="POST" action="/logout">
        <button type="submit" class=" align-middle btn btn-primary">Logout</button>
        </button>
        
      </form>  
    <% } else{ %>  
      <form method="POST" action="/login" >
        <button type="submit" class=" btn btn-primary float-right">Login</button>
  
      </button>
        <input
        class="w-50 float-right"
        type="text"
        required
        name="username"
        style="width: 300px; margin: 1em"
      />
    

      </form>  
         <form method="POST" action="/registerPage/">
         <button type="submit" class=" align-middle btn btn-primary">Register</button>
         </button>
  
        </form>  
   <% } %>
   

  </nav>
</header>

